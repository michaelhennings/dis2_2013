<?xml version="1.0" encoding="UTF-8"?>
<project name="DIS2_Exercise2" default="compile">
  <property name="mainclass" value="assignment3.HelloWorldGraphical" />
  
  <target name="compile">
    <mkdir dir="build" />
    <copy todir="build">
      <fileset dir="src" excludes="*.java" />
    </copy>
    <javac destdir="build" includeantruntime="false" debug="true">
      <src location="src" />
      <classpath location="libs/GraphicsEventSystem.jar" />
    </javac>
  </target>
  
  <target name="run" depends="compile">
    <java dir="build" classname="${mainclass}" fork="true">
      <classpath>
        <pathelement path="build"/>
        <pathelement location="libs/GraphicsEventSystem.jar" />
      </classpath>
    </java>
  </target>
  
  <target name="clean">
    <delete dir="build" />
  </target>
</project>